# Today - Environment Configuration
# Copy this file to .env and fill in your actual values
# Use `npx dotenvx encrypt` to encrypt sensitive values

# =============================================================================
# Web Dashboard
# =============================================================================
WEB_PORT=3000
WEB_USER=admin
WEB_PASSWORD=change_this_password
SESSION_SECRET=generate_a_random_32_char_string

# =============================================================================
# OPTIONAL: Email Configuration (IMAP)
# =============================================================================
EMAIL_ACCOUNT=your.email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993

# Pobox sent mail sync
POBOX_ACCOUNT=your@pobox.com
POBOX_PASSWORD=your_pobox_password

# =============================================================================
# OPTIONAL: Google Calendar Integration (Service Account)
# =============================================================================
# 1. Create service account at: https://console.cloud.google.com/
# 2. Download JSON key and run: bin/encode-service-account
# 3. Share your calendars with the service account email
GOOGLE_SERVICE_ACCOUNT_KEY=base64_encoded_json_key_here
GOOGLE_CALENDAR_IDS=primary,work@group.calendar.google.com
TIME_BLOCKING_CALENDAR_ID=your_time_blocking_calendar_id

# =============================================================================
# OPTIONAL: iCloud Calendar Integration
# =============================================================================
# Get app-specific password from: https://appleid.apple.com/account/manage
ICLOUD_USERNAME=your@icloud.com
ICLOUD_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# =============================================================================
# OPTIONAL: AI Features (Anthropic Claude)
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514

# =============================================================================
# OPTIONAL: Monitoring & Error Tracking
# =============================================================================
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ORG=your_org
SENTRY_PROJECT=your_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Scout APM
SCOUT_APP_ID=your_app_id
SCOUT_KEY=your_scout_key
SCOUT_API_KEY=your_scout_api_key

# =============================================================================
# OPTIONAL: Time Tracking (Toggl)
# =============================================================================
TOGGL_API_TOKEN=your_toggl_api_token

# =============================================================================
# OPTIONAL: GitHub Integration
# =============================================================================
GITHUB_TOKEN=ghp_your_github_token
GITHUB_ACCESS_TOKEN=ghp_your_github_token

# =============================================================================
# OPTIONAL: DigitalOcean Deployment
# =============================================================================
DO_DROPLET_IP=your.droplet.ip.address
DO_DEPLOY_KEY_PUBLIC=your_public_key
DO_DEPLOY_KEY_PRIVATE=base64_encoded_private_key

# =============================================================================
# OPTIONAL: Tailscale (for remote access)
# =============================================================================
TAILSCALE_AUTHKEY=tskey-auth-xxxxx

# =============================================================================
# OPTIONAL: Local LLM (Ollama)
# =============================================================================
OLLAMA_HOST=http://localhost:11434
