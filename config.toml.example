# Configuration for Today system
# Copy this file to config.toml and fill in your values:
#   cp config.toml.example config.toml

# =============================================================================
# Location & Time
# =============================================================================

# Your current timezone
# You can use:
#   - City names: "Madrid", "London", "Tokyo", "New York"
#   - Country names: "Spain", "Germany", "Japan"
#   - Full timezone IDs: "America/New_York", "Europe/Madrid"
#   - Common abbreviations: "EST", "PST", "GMT" (converted to DST-aware zones)
# timezone = "America/New_York"

# Your home location (used in daily reviews)
# home_location = "Your City, State"

# =============================================================================
# User Profile (for personalized daily reviews)
# =============================================================================

[profile]
# Your name (used in daily review greetings and git commits)
# name = "Your Name"

# Your email (used for git commits in devcontainer)
# email = "your@email.com"

# Brief description of your work/focus (shown in daily reviews)
# vocation = "Software engineer focused on web applications"

# Your typical wake time (24-hour format)
# wake_time = "06:00"

# Your typical bedtime (24-hour format)
# bed_time = "21:30"

# Hours before bed to start winding down (for evening routine planning)
# wind_down_hours = 2

# =============================================================================
# Stage Themes (Day-of-Week Focus Areas)
# =============================================================================
# Customize which days are for different types of work.
# "front" = outward-facing work (meetings, calls, emails, support)
# "back" = maintenance work (bills, bug fixes, organizing, admin)
# "off" = personal time (nature, friends, reading, hobbies)

[stages]
# monday = "front"
# tuesday = "off"
# wednesday = "front"
# thursday = "back"
# friday = "off"
# saturday = "front"
# sunday = "back"

# =============================================================================
# Hosting / Guest Rooms (Optional)
# =============================================================================
# If you host guests (Airbnb, etc.), configure check-in/out times

[hosting]
# enabled = false
# checkout_time = "12:00"
# checkin_time = "15:00"
# platforms = ["Airbnb"]

# =============================================================================
# Contact Follow-up (Optional)
# =============================================================================

[contacts]
# follow_up_weeks = 6  # Weeks before a contact is considered "overdue"

# =============================================================================
# Project Monitoring (Optional)
# =============================================================================
# If you have a web project with monitoring, configure it here

[monitoring]
# project_name = "My Project"
# project_url = "https://myproject.com"

# =============================================================================
# AI Configuration (Optional)
# =============================================================================

[ai]
# Claude model to use for AI features
# claude_model = "claude-sonnet-4-20250514"

# =============================================================================
# Deployment (Optional)
# =============================================================================

[deployment]
# domain = "today.example.com"

# =============================================================================
# Email Categorization Patterns (Optional)
# =============================================================================
# These patterns are used by the email organizer to sort emails into
# Front Stage (work/support), Back Stage (maintenance/bills), and Off Stage (personal)
# Add email addresses or domain patterns that match each stage

[email.front_stage]
# Front Stage: Meetings, calls, support, emails, communications
# patterns = [
#   "support@yourcompany.com",
#   "@yourcompany.com",
# ]

[email.back_stage]
# Back Stage: Maintenance, bills, bug fixes, organizing
# patterns = [
#   "alerts@yourbank.com",
#   "@github.com",
#   "notifications@github.com",
# ]

[email.off_stage]
# Off Stage: Personal time, nature, friends, reading, entertainment
# patterns = [
#   "@amazon.com",
#   "@gmail.com",
# ]

