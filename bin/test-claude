#!/bin/bash

# Test script to debug Claude CLI behavior

echo "Testing Claude CLI..."
echo ""

echo "1. Testing simple echo to Claude:"
echo "Say hello" | claude

echo ""
echo "2. Testing with timeout:"
echo "Say hello" | timeout 10 claude

echo ""
echo "3. Testing version:"
claude --version

echo ""
echo "4. Testing help:"
claude --help 2>&1 | head -20