#!/usr/bin/env node

// Run the Notion-Todoist sync scheduler
import { fileURLToPath } from 'url';
import { dirname, join } from 'path';
import { spawn } from 'child_process';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// Path to the sync-scheduler.js file
const schedulerScript = join(__dirname, '..', 'src', 'sync-scheduler.js');

// Forward all arguments to the scheduler
const child = spawn('node', [schedulerScript, ...process.argv.slice(2)], {
  stdio: 'inherit',
  cwd: process.cwd()
});

// Forward exit code
child.on('exit', (code) => {
  process.exit(code);
});

// Handle process termination
process.on('SIGINT', () => {
  child.kill('SIGINT');
});

process.on('SIGTERM', () => {
  child.kill('SIGTERM');
});