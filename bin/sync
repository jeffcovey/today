async function syncPlugins() {
  printInfo('Syncing enabled plugins...');

  try {
    const output = execSync('bin/plugins sync', { encoding: 'utf8', stdio: 'pipe' });
    // Filter out dotenvx messages and show results
    const lines = output.split('\n').filter(l => !l.includes('[dotenvx'));
    for (const line of lines) {
      if (line.trim()) {
        if (line.includes('âœ“')) {
          printInfo(line.trim().replace(/^\s*/, '  '));
        } else if (line.includes('âœ—')) {
          printWarning(line.trim().replace(/^\s*/, '  '));
        } else if (line.includes('Syncing') || line.includes('plugins')) {
          printInfo(line.trim());
        }
      }
    }
    return true;
  } catch (error) {
    // Check if it's just "no plugins enabled"
    if (error.stdout && error.stdout.includes('No plugins to sync')) {
      printInfo('No plugins enabled - skipping plugin sync');
      return true;
    }
    printError(`Plugin sync failed: ${error.message}`);
    return false;
  }
}

