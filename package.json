{
  "name": "today",
  "version": "1.0.0",
  "description": "A personal command center for reviewing inputs, managing plans and dreams, and deciding what to do each day",
  "main": "src/index.js",
  "bin": {
    "notion": "./bin/notion",
    "email": "./bin/email"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' npx jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' npx jest --coverage",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules/**'",
    "lint:md:fix": "markdownlint-cli2 --fix '**/*.md' '!node_modules/**'",
    "lint:notes": "markdownlint-cli2 'notes/**/*.md'",
    "lint:notes:fix": "markdownlint-cli2 --fix 'notes/**/*.md'",
    "lint": "npm run lint:md"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.59.0",
    "@notionhq/client": "^4.0.1",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.5.0",
    "cli-table3": "^0.6.5",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "googleapis": "^155.0.1",
    "imapflow": "^1.0.193",
    "inquirer": "^12.9.1",
    "mailparser": "^3.7.4",
    "open": "^10.2.0",
    "tsdav": "^2.1.5",
    "xml2js": "^0.6.2"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.48.4",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "markdownlint-cli2": "^0.18.1"
  }
}
